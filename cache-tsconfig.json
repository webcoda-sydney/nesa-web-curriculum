{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "@emotion/react",
		"lib": [
			"dom",
			"dom.iterable",
			"es2017",
			"es2021",
			"esnext.asynciterable"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noEmit": false,
		"noFallthroughCasesInSwitch": true,
		"outDir": "dist",
		"paths": {
			"@/*": ["./*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"target": "es2015"
	},
	"exclude": ["node_modules", "legacy", "**/*.tsx"],
	"include": ["next-env.d.ts", "generate-assets-and-config-cache.ts"]
}
