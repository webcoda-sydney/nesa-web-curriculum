{
	"compilerOptions": {
		"target": "es2015",
		"lib": [
			"dom",
			"dom.iterable",
			"es2017",
			"es2021",
			"esnext.asynciterable"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "@emotion/react",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"incremental": true,
		"outDir": "dist"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"generate-assets-and-config.ts"
	],
	"exclude": ["node_modules", "legacy", "kontent"]
}
